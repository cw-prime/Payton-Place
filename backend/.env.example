# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/payton-place

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Cloudinary (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (Required for form notifications)
# For Gmail: Use App Password (not your regular password)
# https://support.google.com/accounts/answer/185833
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@paytonplace.com
NOTIFICATION_EMAIL=service@paytonplacedevelopment.com

# Cloudflare Turnstile (Required for bot protection)
# Get free keys at: https://dash.cloudflare.com/
# Create a widget, then copy the Secret Key here
TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# Admin Panel URL (for email links)
ADMIN_URL=https://payton-place.mbartonportfolio.space/admin

# CORS
CORS_ORIGIN=http://localhost:5173
